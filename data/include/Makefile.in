
BUILD_TOP = ../..

include ${BUILD_TOP}/Makefile.vars

INSTALL = @INSTALL@
SRC_DIR = @srcdir@

FILES = colors.inc \
        materials.inc \
        cameras.inc \
        math.inc \
        shapes.inc

all:

deps:

install:
		@echo Installing include files...
		@set -e; \
		for i in $(FILES); do \
		  @INSTALL_DATA@ ${SRC_DIR}/$$i ${INCLUDE_DIR}; \
		done

clean:

distclean:
		@rm -f Makefile
