
.SUFFIXES:
.SUFFIXES: .cpp .h .o .l .y

#
# You can modify this variables (at your own risk) if you want to change the normal
# directory structure
#

TOPDIR       = @prefix@
BIN_DIR      = ${TOPDIR}/bin/
INCLUDE_DIR  = ${TOPDIR}/include/
LIB_DIR      = ${TOPDIR}/lib/
DOC_DIR      = ${TOPDIR}/doc/
CONFIG_DIR   = ${TOPDIR}/etc/
PLUGIN_DIR   = ${LIB_DIR}/plugins/
TEXTURE_DIR  = ${LIB_DIR}/texture/
SCENE_DIR    = ${TOPDIR}/scenes/
GRADIENT_DIR = ${TOPDIR}/scenes/

#
# Don't change anything below this line.
#

LLAPI_LIB = ${BUILD_TOP}/llapi/libllapi.so
HLAPI_LIB = ${BUILD_TOP}/hlapi/libhlapi.so

STATIC_LLAPI_LIB = ${BUILD_TOP}/llapi/libllapi.a
STATIC_HLAPI_LIB = ${BUILD_TOP}/hlapi/libhlapi.a

INCLUDE = -I${BUILD_TOP}
DEFS    = @DEFS@ \
          -DTOPDIR='"${TOPDIR}"' \
          -DBIN_DIR='"${BIN_DIR}"' \
          -DINCLUDE_DIR='"${INCLUDE_DIR}"' \
          -DLIB_DIR='"${LIB_DIR}"' \
          -DDOC_DIR='"${DOC_DIR}"' \
          -DPLUGIN_DIR='"${PLUGIN_DIR}"' \
          -DTEXTURE_DIR='"${TEXTURE_DIR}"' \
          -DSCENE_DIR='"${SCENE_DIR}"' \
          -DGRADIENT_DIR='"${GRADIENT_DIR}"' \
          -DSTATIC_LINK=@STATIC_LINK@

CXX      = @CXX@
LEX      = @LEX@
YACC     = @YACC@
LEXFLAGS = -8 -t

ifeq (@DEBUG_INFO@,1)
OPT = -gg
else
OPT = -O6
endif

ifeq (@STATIC_LINK@,1)
CXXFLAGS = ${OPT} -pg -ansi -pedantic -fno-exceptions -fno-rtti -Wall -Wstrict-prototypes ${DEFS} ${INCLUDE}
else
CXXFLAGS = ${OPT} -ansi -pedantic -fno-exceptions -fno-rtti -fomit-frame-pointer -Wall -Wstrict-prototypes ${DEFS} ${INCLUDE}
endif
