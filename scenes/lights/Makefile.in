
BUILD_TOP = ../..

include ${BUILD_TOP}/Makefile.vars

INSTALL = @INSTALL@
SRC_DIR = @srcdir@

FILES = area_light1.rt \
	area_light2.rt \
	halo_lights.rt \
	night.rt \
	night2.rt \
	projector.rt \
	warn.rt

all:

install:
		@echo "Installing scenes (lights)..."
		@${SRC_DIR}/${BUILD_TOP}/mkinstalldirs ${SCENE_DIR}/lights
		@set -e; \
		for i in $(FILES); do \
		  @INSTALL_DATA@ ${SRC_DIR}/$$i ${SCENE_DIR}/lights; \
		done

clean:

distclean:
		@rm -f Makefile
		@rm -f *.tga *.png *.jpg
