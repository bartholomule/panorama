sphere
{
  translate <1000, 2000,-9000>
  radius    1000
  material : extends Marble
  {
    color       CLightGrey
    base_color  CWhite
    zoom        <200, 200, 200>
    ambient     0.2
    diffuse     0.5
    specular    0.1
    bump       -0.3
    start_freq  0.6
    octaves     3
  }
}

sphere
{
  translate     <0, 0, 0>
  radius        10000
  material : extends Marble
  {
    color       CBlack
    base_color  CWhite
    zoom        <10, 10, 10>
    ambient     1
    diffuse     0
    specular    0
    start_freq  0.1
    octaves     3
  }
}

scene
{
  camera	c
  light		l
  light		l_ambient
  width		300
  height	300
  background	CSummerSky
  output
  {
    name	"marble2.tga"
  }
  renderer : class Raytracer 
  {
    sampling "adaptive"
  }
}
