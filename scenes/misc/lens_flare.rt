/*
* Simple lens flare plugin test
*/

#include "materials.inc"

define camera c
{
  translate	<0, 0, 400>
}

define light l
{
  translate	<-57, -40, 40>
  intensity     0.8
}

scene
{
  camera	c
  light         l
  width         640
  height        480
  background    CBlack
  output
  {
    type        "png"
    name	"lf_test.png"
  }
  renderer : class Raytracer {}
  filter : class IF_Lens_Flare {
    lf_type     "normal"
    intensity   1.0
    lf_scale    1.0
  }
}



