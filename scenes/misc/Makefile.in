
BUILD_TOP = ../..

include ${BUILD_TOP}/Makefile.vars

INSTALL = @INSTALL@
SRC_DIR = @srcdir@

FILES = cornell_box.rt \
	plastic_cornell_box.rt \
        projector_cartoon.rt

all:

install:
		@echo "Installing scenes (misc)..."
		@${BUILD_TOP}/mkinstalldirs ${SCENE_DIR}/misc
