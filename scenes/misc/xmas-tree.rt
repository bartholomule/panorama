#include "materials.inc"
#include "shapes.inc"

/*
 * Materials
 */

define MTree MLambertian
{
  color = CGreen;
};

define MTrunk MLambertian
{
  color   = CBrown;
  ambient = 0.05;
};

define MBall MMirror
{
  color    = CRed;
  diffuse  = 0.6;
  ambient  = 0.1;
  specular = 0.3;
};

define MPot MPlastic
{
  color = CBlack;
};


/*
 * Pot
 */

cone
{
  max_circle_point = <0, 15, 0>;
  min_circle_point = <0, 0, 0>;
  max_radius       = 40;
  min_radius       = 30;
  material = MPot {};
};


