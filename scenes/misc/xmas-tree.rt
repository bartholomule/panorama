/*
 * Ground
 */

rectangle
{
  addVertex( < 100, 0,  100> );
  addVertex( <-100, 0,  100> );
  addVertex( <-100, 0, -100> );
  addVertex( < 100, 0, -100> );
  material = MChecker
  {
    color = class PatternChecker 
    {
      color      = CWhite;
      base_color = CBlack;
      size       = 25;
    }
    specular = 0.1;
  };
};

/*
 * Set
 */

define XmasCamera class PinholeCamera
{
  translate( <150, 90, 150> );
  look_at = <0, 90, 0>;
};

define XmasLight1 class WarnLight
{
  translate( <300, 250, 500> );
  point_at  = <0, 100, 0>;
  exponent  = 30;
  axis      = <0, 0, 0>;
  angle_th  = 30;
  intensity = 1;
  color     = CWhite;
};

define XmasLight2 class PointLight
{
  translate( <-300, 250, -500> );
  color = { red 0.1 green 0.1 blue 0.1 };
};


/*
 * Action! 
 */

scene
{
  camera     = XmasCamera;
  light      = XmasLight1;
  light      = XmasLight2;
  width      = 400;
  height     = 600;
  background = CMidnight;
  output = class png
  {
    name = "xmas-tree.png";
  };
  renderer = class Raytracer
  {
//    sampling = "adaptive";
  };
