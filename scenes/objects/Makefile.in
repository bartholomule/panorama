
BUILD_TOP = ../..

include ${BUILD_TOP}/Makefile.vars

INSTALL = @INSTALL@
SRC_DIR = @srcdir@

FILES = aggregate.rt \
	box.rt \
	circle.rt \
        cone.rt \
        cylinder.rt \
        phong_triangle.rt \
        rectangle.rt \
        teapot.rt \
        torus.rt \
        triangle.rt

all:

install:
		@echo "Installing scenes (objects)..."
		@${SRC_DIR}/${BUILD_TOP}/mkinstalldirs ${SCENE_DIR}/objects
		@set -e; \
		for i in $(FILES); do \
		  @INSTALL_DATA@ ${SRC_DIR}/$$i ${SCENE_DIR}/objects; \
		done

clean:

distclean:
		@rm -f Makefile
		@rm -f *.tga
