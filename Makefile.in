
BUILD_TOP = .

include ${BUILD_TOP}/Makefile.vars

SRC_DIR = @srcdir@

DIRS = data \
       doc \
       hlapi \
       llapi \
       plugins \
       programs \
       scenes

all:
		@set -e; \
		for i in $(DIRS); do \
                  $(MAKE) -C $$i all; \
                done

install:        all installdirs
		@set -e; \
		for i in $(DIRS); do \
                  $(MAKE) -C $$i install; \
                done

clean:
		@set -e
		@for i in $(DIRS); do \
                  $(MAKE) -C $$i clean; \
                done
		rm -f so_locations

distclean:
		@set -e
		@for i in $(DIRS); do \
                  $(MAKE) -C $$i distclean; \
                done
		@rm -f Makefile Makefile.targets Makefile.vars
		@rm -f config.cache config.log config.status

installdirs:
		@echo Creating directories...
		@${SRC_DIR}/mkinstalldirs ${TOP_DIR} ${BIN_DIR} ${LIB_DIR} ${DOC_DIR} \
                			    ${CONFIG_DIR} ${INCLUDE_DIR} ${PLUGIN_DIR}  \
                                            ${TEXTURE_DIR} ${SCENE_DIR} ${GRADIENT_DIR}

Makefile:	config.status ${SRC_DIR}/Makefile.in
		$(SHELL) config.status

config.status:	${SRC_DIR}/configure
		$(SHELL) config.status --recheck

${SRC_DIR}/configure:	${SRC_DIR}/configure.in
			cd ${SRC_DIR} && autoconf
